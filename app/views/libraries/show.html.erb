<h1 class="page-header"><%= @library.name %></h1>
<h5> Address - <%= @library.address %></h5>
<h5>Description - <%= @library.description%></h5>

<h2><%= link_to "Add New Client", new_library_client_path(@library), :class => "btn btn-success btn-sm", :role => "button" %></h2>

<table class="table table-striped table-sm">
  <tr>
    <th>#</th>
    <th>First name</th>
    <th>Second name</th>
    <th></th>
  </tr>
  <% @clients.each_with_index do |client, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= client.first_name %></td>
      <td><%= client.second_name %></td>
      <td>
        <%= link_to "View", library_client_path(@library, client), :class => "btn btn-info btn-sm", :role => "button" %>
        <%= link_to "Edit", edit_library_client_path(@library, client), :class => "btn btn-warning btn-sm", :role => "button" %>
        <%= link_to "Delete", library_client_path(@library, client), :class => "btn btn-danger btn-sm", :role => "button", method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
</table>