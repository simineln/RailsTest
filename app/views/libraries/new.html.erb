<h1>Add New Libraries</h1>

<%= form_for @library do |f| %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "Library Name" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: "Address" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, autofocus: true, autocomplete: "Description" %>
  </div>

  <%= f.submit "Submit" %>

<% end %>